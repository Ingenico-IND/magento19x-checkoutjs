<?xml version="1.0"?>
<config>
  <modules>
    <Ingenico_Ingenico>
      <version>1.0.0</version>
    </Ingenico_Ingenico>
  </modules>
  <global>
    <models>
      <ingenico>
        <class>Ingenico_Ingenico_Model</class>
      </ingenico>
    </models>
    <helpers>
      <ingenico>
        <class>Ingenico_Ingenico_Helper</class>
      </ingenico>
    </helpers>
    <blocks>
      <ingenico>
        <class>Ingenico_Ingenico_Block</class>
      </ingenico>
    </blocks>
  </global>
  <default>
    <payment>
      <ingenico>
        <model>ingenico/standard</model>
        <active>1</active>
        <order_status>pending</order_status>
        <title>Ingenico Payment Gateway</title>
        <payment_action>sale</payment_action>
		    <submit_url>https://www.paynimo.com/</submit_url>
        <allowspecific>0</allowspecific>
        <sort_order>0</sort_order>
        <paymentModeOrder>wallets,netBanking,imps,cards,cashCards,UPI,MVISA,debitPin,NEFTRTGS,emiBanks</paymentModeOrder>
        <primary_color_code>#3977b7</primary_color_code>
        <secondary_color_code>#FFFFFF</secondary_color_code>
        <button_color_code_1>#1969bb</button_color_code_1>
        <button_color_code_2>#FFFFFF</button_color_code_2>
        <merchant_logo_url>https://www.paynimo.com/CompanyDocs/company-logo-md.png</merchant_logo_url>
        <enableExpressPay>0</enableExpressPay>
        <separateCardMode>0</separateCardMode>
        <enableNewWindowFlow>1</enableNewWindowFlow>
        <paymentmodes>all</paymentmodes>
        <enableInstrumentDeRegistration>0</enableInstrumentDeRegistration>
        <txnType>SALE</txnType>
        <hideSavedInstruments>0</hideSavedInstruments>
        <saveInstrument>0</saveInstrument>
        <responsePopup>0</responsePopup>
        <embedPopup>0</embedPopup>
      </ingenico>
    </payment>
  </default>
  <frontend>
    <routers>
      <ingenico>
        <use>standard</use>
        <args>
          <module>Ingenico_Ingenico</module>
          <frontName>ingenico</frontName>
        </args>
      </ingenico>
    </routers>
  </frontend>
  <admin>
    <routers>
      <ingenico>
        <use>admin</use>
        <args>
          <module>Ingenico_Ingenico</module>
          <frontName>ingenico_admin</frontName>
        </args>
      </ingenico>
    </routers>
  </admin>
  <adminhtml>
    <menu>
      <ingenico module="ingenico">
        <title>Ingenico</title>
        <sort_order>71</sort_order>
        <children>
          <offline module="ingenico">
            <title>Offline Verification</title>
            <action>ingenico_admin/adminhtml_verification</action>
          </offline>
          <reconciliation module="ingenico">
            <title>Reconciliation</title>
            <action>ingenico_admin/adminhtml_reconciliation</action>
          </reconciliation>
        </children>
      </ingenico>
    </menu>
    <layout>
        <updates>
            <ingenico>
                <file>ingenico.xml</file>
            </ingenico>
        </updates>
    </layout>
  </adminhtml>
</config>